<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="@color/background" android:layout_height="match_parent">
	<TextView android:id="@+id/layoutProjectName"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content" android:text="TextView"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:textColor="@color/textColor"
		android:textSize="25sp" android:layout_toLeftOf="@+id/layoutProjectAmount"></TextView>
	<TextView android:id="@+id/layoutProjectAmount"
		android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="100dp" android:text="TextView"
		android:layout_alignParentRight="true"
		android:textColor="@color/positiveColor"
		android:gravity="right"
		android:textSize="20sp" android:layout_centerVertical="true"></TextView>

</RelativeLayout>

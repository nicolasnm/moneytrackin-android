<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">
	<TextView android:id="@+id/headerProject" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/headerProjects"
		android:gravity="center" android:textColor="#FFFF00" android:textSize="20sp"
		android:typeface="serif" android:background="@drawable/btnblue" 
		android:textStyle="bold" />
	<TextView android:id="@+id/projectName" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textStyle="bold" 
		android:textColor="#000000" android:text="@string/hello"
		android:textSize="18sp" />
	<TextView android:id="@+id/projectAmount"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/hello" android:textColor="#0000FF"
		android:textSize="12sp" />
	<Button android:id="@+id/addTransaction" android:text="@string/addTransaction"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<ListView android:id="@id/android:list" android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_weight="1"
		android:drawSelectorOnTop="false" />


</LinearLayout>
